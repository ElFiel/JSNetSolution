%h1 Listing contacts

%table
  %tr
    %th Name
    %th Email
    %th Theme
    %th Content
    %th Otros
    %th
    %th
    %th

  -@contacts.each do |contact|
    %tr
      %td 
        = contact.name
      %td 
        = contact.email
      %td 
        = contact.theme
      %td 
        = contact.content
      %td 
        = contact.otros
      %td 
        = link_to 'Show', contact
      %td 
        = link_to 'Edit', edit_contact_path(contact)
      %td 
        = link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Contact', new_contact_path
